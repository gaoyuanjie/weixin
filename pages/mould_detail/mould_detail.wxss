/* 标题样式 */
.container{
  display: flex;
  flex-direction:column;
  height: auto;
  margin-bottom:30rpx;
  box-shadow: 10rpx 10rpx 10rpx #888888;
  border-radius: 20rpx;
  margin-top:15rpx;
  margin-left:15rpx;
  margin-right:15rpx;
  margin-bottom:15rpx;
  background: rgb(237, 237, 238);
}
.item{
  width: 100%;
  margin-top: 10rpx; 
  font-size: 30rpx;
  display: flex;
  height: 80rpx;
  border-bottom: 2rpx solid rgb(158, 158, 158);
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item2{
  width: 100%;
  margin-top: 10rpx; 
  font-size: 30rpx;
