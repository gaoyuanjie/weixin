/* 下拉框样式 */



.select {
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 30rpx;
  margin-right: 50rpx;
  margin-bottom: 15rpx;
  box-sizing: border-box;

  /* width: 100%; */
  /* height: 70rpx; */
  border: 1px solid #000;
  border-radius: 8rpx;
  display: flex;
  /* align-items: center; *//* padding: 0 20rpx; */
  background-color: #fff;
}

.select_text {
  /* font-size: 30rpx; */
  padding: 0 20rpx;
  height: 63rpx;
  line-height: 63rpx;
  font-size: 28rpx;
  flex: 1;
}

.select_img {
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 32rpx;
  height: 32rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

/* overflow-y: auto;必须设置，不然不会自动收起来，即哪怕你父元素是0rpx */
.option_box {
  z-index: 100;
  position: absolute;
  top: 293rpx;
  /* width: 100%; */
  
  width: 672rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 30rpx;
  margin-right: 50rpx;
  margin-bottom: 20rpx;
  /* box-sizing: border-box; */


  border: 0px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 26rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
